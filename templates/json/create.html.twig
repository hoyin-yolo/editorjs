{% extends "base.html.twig" %}




{% block body %}

<div class="container">
    <div class="row">
        <h3>Create Post</h3>
        {% for message in app.flashes('notice') %}
            <div class="alert alert-success">
                {{message}}
            </div>
        {% endfor %}
        <div>
            {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.name) }}
                {{ form_widget(form.name, {'attr': {'class':'form-control'}})}}
            </div>
            <div class="form-group">
                {{ form_label(form.content) }}
                {{ form_widget(form.content, {'attr': {'class':'form-control', 'id':'body'}})}}
                
            </div>
            <div id="editor" style="border:1px dotted;"></div>
            <div class="form-group">
                <button class="btn btn-info mt" onclick="postData()">Submit</button>
            </div>
            
            {{ form_end(form) }}
        </div>
    </div>
</div>


<script>

function postData() {
    editor.save().then((outputData) => {
        console.log(outputData);
        document.getElementById("body").innerHTML = "XXX";
    }).catch((error) => {
        console.log('Failed: ', error)
    });
    
}


const editor = new EditorJS({

   holder: 'editor',
   
        tools: {
         header: Header,        
         list: List,        
         checklist: Checklist,
         quote: Quote,
         code: CodeTool,
         table: Table,

         embed: {
          class: Embed,
          inlineToolbar: true,
          config: {
            services: {
              youtube: true,
              coub: true
            }
          }
        }
     }

});
</script>
{% endblock %}